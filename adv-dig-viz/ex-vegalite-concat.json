//from week 5 - edited vconcat to concat
{
  "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
  "data": {
    "url": "data/cars.json"
  },
  "columns": 2,
  "concat": [
    {
      "selection": {
        "selected_points": {
          "type": "interval"
        }
      },
      "mark": "point",
      "encoding": {
        "x": {
          "field": "Miles_per_Gallon",
          "type": "quantitative"
        },
        "y": {
          "field": "Weight_in_lbs",
          "type": "quantitative"
        },
        "color": {
          "condition": {
            "selection": "selected_points",
            "type": "nominal"
          },
          "value": "grey"
        }
      }
    },
    {
      "mark": "bar",
      "transform": [
        {
          "filter": {
            "selection": "selected_points"
          }
        }
      ],
      "encoding": {
        "x": {
          "field": "Miles_per_Gallon",
          "bin": true,
          "type": "quantitative"
        },
        "y": {
          "field": "Weight_in_lbs",
          "aggregate": "sum",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": "bar",
      "transform": [
        {
          "filter": {
            "selection": "selected_points"
          }
        }
      ],
      "encoding": {
        "y": {
          "field": "Miles_per_Gallon",
          "bin": true,
          "type": "quantitative"
        },
        "x": {
          "field": "Weight_in_lbs",
          "aggregate": "sum",
          "type": "quantitative"
        }
      }
    }
  ]
}
